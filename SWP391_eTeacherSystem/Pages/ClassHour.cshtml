@page
@model SWP391_eTeacherSystem.Pages.ClassHourModel
@{
}
<!-- ======= Class Hour Section ======= -->
<section id="hour_class" class="hour_class">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>List of Class hour</h2>
            <p>Short lessons to reinforce your knowledge</p>
        </div>
        <div class="row">
            @foreach (var classes in Model.Classes)
            {
                <div class="col-md-3">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            @classes.Class_id
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@classes.Subject_name - Grade @classes.Grade</h5>
                            <p class="card-text">
                                <i class="fa fa-dollar-sign"></i> @classes.Price VNĐ/lesson, @classes.Number_of_session sessions/course<br />
                                <i class="fa fa-user"></i> Address: @classes.Address
                            </p>
                            <form method="get" asp-page="/ClassDetails">
                                <input type="hidden" name="id" value="@classes.Class_id" />
                                <button type="submit" class="btn btn-success">More Details →</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        </div>
    </div>
</section>
<!-- ======= End Class Hour Section ======= -->
