
@page
@model SWP391_eTeacherSystem.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section id="Regis" class="contact ctaa">
    <div class="container register" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-3"></div>
            <div id="register" class="col-lg-6">
                <form method="post" role="form" class="form board" style="border-radius: 8px;" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="section-title">
                            <h3>Register</h3>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="RegisterDto.FirstName">First Name</label>
                            <input type="text" asp-for="RegisterDto.FirstName" class="form-control" required>
                            <span asp-validation-for="RegisterDto.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="RegisterDto.LastName">Last Name</label>
                            <input type="text" asp-for="RegisterDto.LastName" class="form-control" required>
                            <span asp-validation-for="RegisterDto.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="RegisterDto.Email">Your Email</label>
                            <input type="email" asp-for="RegisterDto.Email" class="form-control" required>
                            <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="RegisterDto.UserName">Username</label>
                            <input type="text" asp-for="RegisterDto.UserName" class="form-control" required pattern="^[a-zA-Z0-9]*$" title="Username can only contain letters or digits">
                            <span asp-validation-for="RegisterDto.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="RegisterDto.Password">Password</label>
                            <input type="password" asp-for="RegisterDto.Password" class="form-control" required minlength="6">
                            <span asp-validation-for="RegisterDto.Password" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="RegisterDto.Gender">Gender</label>
                                <select asp-for="RegisterDto.Gender" class="form-control" required>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="RegisterDto.Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="RegisterDto.Role">Role</label>
                                <select asp-for="RegisterDto.Role" class="form-control" required>
                                    <option value="1">Student</option>
                                    <option value="2">Admin</option>
                                    <option value="3">Tutor</option>
                                    <option value="4">Moderator</option>
                                </select>
                                <span asp-validation-for="RegisterDto.Role" class="text-danger"></span>
                            </div>
                        </div>
                        <p></p>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn form-control btn-primary">Register</button>
                    </div>
                    <div class="text-center" style="margin-top: 10px;">
                        Already have an account? <a asp-page="Login">Login</a>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>