@page
@model SWP391_eTeacherSystem.Pages.ClassModel
@{
}
<!-- ======= Class Hour Section ======= -->
<section id="class-hour" class="class-hour">
	<div class="container" data-aos="fade-up">
		<div class="section-title">
			<h2>Create hourly rental class</h2>
			<p>For your convenience and to make the most of your free time</p>
		</div>
		<div class="row">

			<div class="col-lg-2"></div>

            <div class="col-lg-8">
                <form method="post" role="form" class="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.User_id">User Id</label>
                            <input type="text" asp-for="ClassHourDto.User_id" class="form-control" readonly>
                            <span asp-validation-for="ClassHourDto.User_id" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Class_id">Class Id</label>
                            <input type="text" asp-for="ClassHourDto.Class_id" class="form-control" readonly>
                            <span asp-validation-for="ClassHourDto.Class_id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Subject_name">Subject Name</label>
                            <select asp-for="ClassHourDto.Subject_name" class="form-control" required>
                                <option value="">Please select a subject</option>
                                @foreach (var subject in Model.Subjects)
                                {
                                    <option value="@subject.Subject_name">@subject.Subject_name</option>
                                }
                            </select>
                            <span asp-validation-for="ClassHourDto.Subject_name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Address">Address</label>
                            <input type="text" asp-for="ClassHourDto.Address" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Start_date">From Day</label>
                            <input type="date" asp-for="ClassHourDto.Start_date" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.Start_date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.End_date">To</label>
                            <input type="date" asp-for="ClassHourDto.End_date" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.End_date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Start_time">Study From</label>
                            <input type="time" asp-for="ClassHourDto.Start_time" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.Start_time" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.End_time">To Until</label>
                            <input type="time" asp-for="ClassHourDto.End_time" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.End_time" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Grade">Grade</label>
                            <input type="number" asp-for="ClassHourDto.Grade" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.Grade" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Price">Price</label>
                            <input type="number" asp-for="ClassHourDto.Price" class="form-control" readonly>
                            <span asp-validation-for="ClassHourDto.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Number_of_session">Number of Sessions</label>
                            <input type="number" asp-for="ClassHourDto.Number_of_session" class="form-control" required>
                            <span asp-validation-for="ClassHourDto.Number_of_session" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClassHourDto.Description">Describe other requirements</label>
                            <input type="text" asp-for="ClassHourDto.Description" class="form-control">
                            <span asp-validation-for="ClassHourDto.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="ClassHourDto.Status" class="form-control" value="1">
                        <span asp-validation-for="ClassHourDto.Status" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <div class="loading"></div>
                        <div class="error-message"></div>
                        <div class="sent-message"></div>
                    </div>
                    <div class="form-group">
                        <label>Total Price</label>
                        <input type="text" id="totalPrice" class="form-control" readonly>
                    </div>
                    <p></p>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                        <p></p>
                    </div>
                </form>
            </div>

			<div class="col-lg-2"></div>

		</div>

	</div>
</section>
<!-- ======= End Class Hour Section ======= -->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const startTimeInput = document.querySelector('input[name="ClassHourDto.Start_time"]');
            const endTimeInput = document.querySelector('input[name="ClassHourDto.End_time"]');
            const numberOfSessionsInput = document.querySelector('input[name="ClassHourDto.Number_of_session"]');
            const priceInput = document.querySelector('input[name="ClassHourDto.Price"]');
            const totalPriceInput = document.getElementById('totalPrice');

            function calculateTotalPrice() {
                const startTime = startTimeInput.value;
                const endTime = endTimeInput.value;
                const numberOfSessions = numberOfSessionsInput.value;
                const price = priceInput.value;

                if (startTime && endTime && numberOfSessions && price) {
                    const start = new Date(`1970-01-01T${startTime}:00`);
                    const end = new Date(`1970-01-01T${endTime}:00`);
                    const duration = (end - start) / 3600000; // convert milliseconds to hours
                    const total = duration * numberOfSessions * price;
                    totalPriceInput.value = total.toFixed(2);
                }
            }

            startTimeInput.addEventListener('input', calculateTotalPrice);
            endTimeInput.addEventListener('input', calculateTotalPrice);
            numberOfSessionsInput.addEventListener('input', calculateTotalPrice);
            priceInput.addEventListener('input', calculateTotalPrice);

            calculateTotalPrice(); // Initial calculation
        });
    </script>
}