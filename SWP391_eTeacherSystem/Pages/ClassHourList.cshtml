@page
@model SWP391_eTeacherSystem.Pages.ClassHourListModel
@{
}
<!-- ======= ClassHour List Section ======= -->
<section id="classhour_list" class="classhour_list">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>List of ClassHours</h2>
            <p>List of class hours you have created</p>
        </div>
        <div class="row">
            @foreach (var classes in Model.ClassHours)
            {
                <div class="col-md-3">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            @classes.Class_id
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@classes.Subject_name - Grade @classes.Grade</h5>
                            <p class="card-text">
                                <i class="fa fa-dollar-sign"></i> @classes.Price VNĐ/lesson, @classes.Number_of_session sessions/course<br />
                                <i class="fa fa-user"></i> Address: @classes.Address
                            </p>
                            @if (classes.Status == 1)
                            {
                                <p class="text-success">Available</p>
                                <form method="get" asp-page="/DeleteClassHour">
                                    <input type="hidden" name="id" value="@classes.Class_id" />
                                    <button type="submit" class="btn btn-success">ClassHour Details →</button>
                                </form>
                            }
                            else if (classes.Status == 2)
                            {
                                <p class="text-danger">Not Available</p>
                                <button type="button" class="btn btn-secondary" disabled>ClassHour Details →</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- ======= End ClassHour List Section ======= -->